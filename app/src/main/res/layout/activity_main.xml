<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mitranetpars.sportmagazine.MainActivity"
    android:id="@+id/main_activity_relative_layout">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:id="@+id/loginButton"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/signinButton"
            android:layout_alignStart="@+id/signinButton" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signin"
            android:id="@+id/signinButton"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signinButton"
        android:orientation="vertical"
        android:gravity="center">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consumer"
            android:id="@+id/consumerRadioButton"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/producer"
            android:id="@+id/producerRadioButton"
            android:layout_weight="1"/>
    </RadioGroup>

    <TextView
        android:text="@string/welcometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeTextView"
        android:layout_above="@+id/signinButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />

    <at.markushi.ui.CircleButton
        android:text="@string/exit"
        android:contentDescription="@string/exit"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/exitbutton"
        android:src="@drawable/close128"
        app:cb_color="#99CC00"
        app:cb_pressedRingWidth="8dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="33dp" />

    <at.markushi.ui.CircleButton
        android:text="@string/home"
        android:contentDescription="@string/home"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/homebutton"
        android:src="@drawable/home128"
        app:cb_color="#99CC00"
        app:cb_pressedRingWidth="8dip"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="33dp"
        android:layout_alignTop="@+id/exitbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/splash_image_view"
        android:contentDescription="@string/app_name" />

    <at.markushi.ui.CircleButton
        android:text="@string/logout"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/logoutbutton"
        android:src="@drawable/logoff128"
        app:cb_color="#99CC00"
        app:cb_pressedRingWidth="8dip"
        android:layout_alignTop="@+id/homebutton"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logout" />

</RelativeLayout>
