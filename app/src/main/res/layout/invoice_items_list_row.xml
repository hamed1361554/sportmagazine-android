<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="2.5dp"
    android:paddingBottom="2.5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/invoice_item_row_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="7dip"
            android:padding="2dip" >

            <ImageView
                android:id="@+id/invoice_item_row_product_image"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/basket64"
                android:contentDescription="@string/buy" />
        </LinearLayout>

        <TextView
            android:id="@+id/invoice_item_row_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/invoice_item_row_thumbnail"
            android:text="@string/product"
            android:textColor="#040404"
            android:textSize="15sp"
            android:typeface="sans" />

        <LinearLayout
            android:id="@+id/invoice_item_row_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/invoice_item_row_product_name"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/invoice_item_row_product_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="60dip"
                android:layout_weight="0.23"
                android:paddingRight="5dip"
                android:text="Rs. 200"
                android:textColor="#1d1d1d"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/invoice_item_row_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingRight="25dip"
                android:text="100 gm"
                android:textColor="#343434"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/invoice_item_row_quantity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:text="Count:10"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/invoice_item_row_color_size_brand_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="7dip"
            android:layout_marginLeft="7dip"
            android:padding="2dip"
            android:layout_below="@+id/invoice_item_row_thumbnail"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/invoice_item_row_color"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_background" />

            <TextView
                android:id="@+id/invoice_item_row_size"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:text="Size:10"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/invoice_item_row_brand"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:text="Brand:10"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>